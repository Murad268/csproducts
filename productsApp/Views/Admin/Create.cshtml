@model Product

@{
    ViewData["Title"] = "Create Product";
    Layout = "_AdminLayout";
}

<main class="flex-grow container mx-auto py-8">
    <h1 class="text-3xl font-semibold mb-6 text-center text-gray-700">Create Product</h1>
    <form asp-action="Create" asp-controller="Admin" enctype="multipart/form-data" method="post"
          class="max-w-2xl mx-auto bg-white p-6 rounded shadow-md">
        <div class="mb-4">
            <label for="imageFile" class="block text-gray-700 font-medium mb-2">Product Image</label>
            <input type="file" id="imageFile" name="imageFile"
                   class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <span asp-validation-for="Image"></span>
        </div>

    
        <div class="mb-4">
            <label for="name" class="block text-gray-700 font-medium mb-2">Product Name</label>
            <input type="text" id="name" asp-for="Name"
                   class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-4">
            <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
            <input type="number" id="price" asp-for="Price"
                   class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="mb-4">
            <label for="count" class="block text-gray-700 font-medium mb-2">Count</label>
            <input type="number" id="count" asp-for="Count"
                   class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <span asp-validation-for="Count"></span>
        </div>
        <div class="mb-4">
            <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
            <textarea id="description" asp-for="Description"
                      class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            <span asp-validation-for="Description"></span>
                  </div>
        <div class="flex justify-end">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Create Product</button>
        </div>
    </form>
</main>
