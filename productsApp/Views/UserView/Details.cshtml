@model productsApp.Models.Product

@{
    ViewData["Title"] = "Məhsul Ətraflı";
}

<div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-4">@Model.Name</h2>
    <p class="text-gray-600 mb-2"><strong>Qiymət:</strong> @Model.Price.ToString("0.00 AZN")</p>
    <p class="text-gray-600 mb-2"><strong>Say:</strong> @Model.Count</p>
    <p class="text-gray-600 mb-2"><strong>Təsvir:</strong> @Model.Description</p>
    <a asp-action="Index" class="text-blue-500 hover:underline mt-4 inline-block">
        Geri Qayıt
    </a>
</div>
