@model List<productsApp.Models.Product>

@{
    ViewData["Title"] = "Məhsullar";
}

<h2 class="text-xl font-semibold mb-6">Məhsullar</h2>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    @foreach (var product in Model)
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            <h3 class="text-lg font-semibold">@product.Name</h3>
            <p class="text-gray-600">@product.Price.ToString("0.00 AZN")</p>
            <a asp-action="Details" asp-route-id="@product.Id" class="text-blue-500 hover:underline mt-2 inline-block">
                Ətraflı Bax
            </a>
        </div>
    }
</div>
