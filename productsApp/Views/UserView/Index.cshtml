@model IEnumerable<productsApp.Models.Product>

    @{
    ViewData["Title"] = "Məhsullar";
    }

    <h2 class="text-xl font-semibold mb-6">Məhsullar</h2>

    <form method="get" class="mb-6 bg-white p-6 rounded-lg shadow-md max-w-md mx-auto">
        <label for="CategoryId" class="block text-sm font-medium text-gray-700 mb-2">Kateqoriya Seçin</label>
        @Html.DropDownList(
            "categoryId",
            new SelectList(ViewBag.CategoryList, "Id", "Title"),
            "Hamısı",
            new { @class = "block w-full appearance-none border border-gray-300 bg-white text-gray-700 py-2 px-3 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" }
        )
        <button type="submit" class="mt-4 w-full bg-blue-500 text-white font-medium py-2 px-4 rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Axtar
        </button>
    </form>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var product in Model)
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            <h3 class="text-lg font-semibold">@Html.DisplayFor(p => product.Name)</h3>
            <p class="text-gray-600">@product.Price.ToString("0.00 AZN")</p>
            <a asp-action="Details" asp-route-id="@product.Id" class="text-blue-500 hover:underline mt-2 inline-block">
                Ətraflı Bax
            </a>
        </div>
    }
    </div>
