@model productsApp.Models.Category

@{
    ViewData["Title"] = "Kateqoriyanı Redaktə Et";
}

<div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Kateqoriyanı Redaktə Et</h2>
    <form method="post">
        <div class="mb-4">
            <label asp-for="Title" class="block text-sm font-medium text-gray-700">Kateqoriya Adı</label>
            <input asp-for="Title" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
            <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
        </div>
        <div class="mt-4">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Yadda Saxla</button>
            <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 ml-2">Geri</a>
        </div>
    </form>
</div>
