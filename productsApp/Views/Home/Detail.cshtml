@{
    ViewData["Title"] = "Home Page";
    @model Product
}

<main class="flex-grow container mx-auto py-8">
    <div class="max-w-4xl mx-auto border p-6 rounded shadow">
        <img src="@Model.Image" alt="@Model.Name" class="w-full h-80 object-cover mb-6 rounded">

        <h1 class="text-3xl font-bold mb-4">@Model.Name</h1>
        <p class="text-lg mb-2"><strong>Count:</strong> @Model.Count</p>
        <p class="text-lg mb-2"><strong>Price:</strong> $@Model.Price</p>
        <p class="text-lg mb-4">
            <strong>Description:</strong> @Model.Description
        </p>

        <div class="flex gap-4 mt-6">
            <button class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Back to Products</button>
        </div>
    </div>
</main>